{
  "name": "js-test-outline",
  "displayName": "js-test-outline",
  "description": "Outline for JavaScript/TypeScript test",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:js-test-outline.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "js-test-outline.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.2.4",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "glob": "^8.0.3",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "typescript": "^4.7.4"
  },
  "configuration": {
    "title": "JS Test Outline",
    "properties": {
      "js-test-outline.testSourceRoots": {
        "type": "array",
        "default": [
          "__tests__",
          "__specs__",
          "__test__",
          "__spec__",
          "tests",
          "specs",
          "test",
          "spec"
        ],
        "description": "Roots of test to start exploring."
      },
      "js-test-outline.testFileSuffix": {
        "type": "string",
        "default": ".test",
        "description": "Suffix to determine if the file is a test."
      }
    }
  }
}
